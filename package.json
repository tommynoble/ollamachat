{
  "name": "ollama-chat-electron",
  "version": "1.0.0",
  "description": "Production-ready desktop chat application for Ollama AI models",
  "main": "main.js",
  "homepage": "https://github.com/yourusername/ollama-chat-electron",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "vite --host",
    "dev:electron": "nodemon --exec electron .",
    "build": "vite build",
    "preview": "vite preview",
    "test": "echo \"No tests yet\"",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "production-check": "node scripts/production-check.js",
    "dist": "electron-builder",
    "dist:dir": "electron-builder --dir",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rimraf build dist",
    "prepack": "npm run clean && npm run build"
  },
  "keywords": [
    "ollama",
    "chat",
    "ai",
    "electron",
    "desktop",
    "llm",
    "machine-learning"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ollama-chat-electron.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ollama-chat-electron/issues"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^7.0.6",
    "@vitejs/plugin-react": "^4.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.ollama.chat",
    "productName": "Ollama Chat",
    "copyright": "Copyright Â© 2024 Your Name",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "style.css",
      "styles/**/*",
      "ollama_chat.py",
      "drive_detector.py",
      "package.json"
    ],
    "asarUnpack": [
      "*.py"
    ],
    "compression": "maximum",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "differentialPackage": false
    },
    "extraFiles": [
      {
        "from": "ollama_chat.py",
        "to": "Resources/ollama_chat.py"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Your Name"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yourusername",
        "repo": "ollama-chat-electron"
      }
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
